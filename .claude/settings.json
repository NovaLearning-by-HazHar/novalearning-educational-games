{
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Bash(npm run *)",
      "Bash(npm test *)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(npx next *)",
      "Bash(npx tsc *)"
    ],
    "ask": [
      "Write",
      "Edit",
      "Bash(git push *)",
      "Bash(npm install *)",
      "Bash(npx *)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(**/secrets/**)",
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Bash(curl * | *)",
      "Bash(wget * | *)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '--- Recent commits ---' && git log --oneline -5 2>/dev/null && echo '--- Working tree ---' && git status --short 2>/dev/null | head -15"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npx eslint --fix \"$CC_TOOL_INPUT_file_path\" 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
